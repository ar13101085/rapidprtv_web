<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Pinegrow/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/Pinegrow/css/bootstrap-select.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Pinegrow/css/style.css" rel="stylesheet"/>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak, .ng-hide {
            display: none !important;
        }
    </style>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/my_ctrl.js"></script>
</head>
<body ng-app="my_app" ng-controller="my_ctrl" ng-cloak>
    <nav class="navbar navbar-default my-nav" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home">Home</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@(ViewBag.Title == "Video" ? "active" : "")">
                        <a href="/Home/Video">Video</a>
                    </li>
                    <li class="@(ViewBag.Title == "Advertise" ? "active" : "")">
                        <a href="/Home/Advertise">Advertise</a>
                    </li>

                    <li class="@(ViewBag.Title == "Text" ? "active" : "")">
                        <a href="/Home/Text">Text</a>
                    </li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#">Login</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">Action</a>
                            </li>
                            <li>
                                <a href="#">Another action</a>
                            </li>
                            <li>
                                <a href="#">Something else here</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Separated link</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" id="body_content">

        @RenderBody()

    </div>

    <footer style="padding-left: 30px">
        <hr />
        <p class="text-left">&copy; @DateTime.Now.Year - RapidPR TV</p>
    </footer>
    @Html.Partial("_Modal")
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Pinegrow/js/jquery.min.js"></script>
    <script src="~/Pinegrow/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="~/Pinegrow/js/ie10-viewport-bug-workaround.js"></script>
    <script src="~/Pinegrow/js/bootstrap-select.min.js"></script>
</body>
</html>